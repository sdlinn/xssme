{
 "manifest_version": 2,

"name": "Xss Me",
 "description": "This is for the Browser Security Project",
 "version": "1.0",
 "permissions":[
	"tabs", 
	"<all_urls>",
	"storage"
 ],
 "content_scripts": [
    {
    "matches": [
        "<all_urls>"
        ],
    "js": ["content.js"]
    }
],
 "background": {
    "scripts": ["background.js"],
    "persistent": true
 },

"browser_action": {
 "default_popup": "popup.html",
 "default_title": "Browser Security"
 }
}